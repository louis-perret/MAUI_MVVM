<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.ContentViews.SkillCell">
   <Grid RowDefinitions="auto,auto" ColumnDefinitions="*, auto">
        <Label Text="{Binding Name}" FontSize="Subtitle" FontAttributes="Bold" FontFamily=""/>
        <Label Text="{Binding Type}" Grid.Column="2" FontSize="Subtitle" FontAttributes="Bold" FontFamily=""/>
        <Label Text="{Binding Description}" Grid.Row="1" Grid.ColumnSpan="2"/>
   </Grid>
</ContentView>

